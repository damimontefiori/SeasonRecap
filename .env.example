# ===========================================
# SeasonSummarizer - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# ===========================================
# Anthropic Configuration
# ===========================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# Azure Speech Services (TTS)
# ===========================================
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=westeurope
AZURE_SPEECH_VOICE=es-ES-ElviraNeural

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# File Storage Paths
# ===========================================
DATA_DIR=./data
UPLOADS_DIR=./data/uploads
OUTPUTS_DIR=./data/outputs
JOBS_DIR=./data/jobs

# ===========================================
# Processing Configuration
# ===========================================
# Maximum file size for uploads (in bytes, default 2GB)
MAX_FILE_SIZE=2147483648

# FFmpeg path (leave empty to use system PATH)
FFMPEG_PATH=

# ===========================================
# Summary Configuration Defaults
# ===========================================
# Target duration in minutes for different lengths
TARGET_DURATION_SHORT=5
TARGET_DURATION_MEDIUM=15
TARGET_DURATION_LONG=30

# Maximum number of LLM retries on failure
LLM_MAX_RETRIES=3
